<%=form_with model: @user do |form| %>
 <%= form.label :username %><br>
 <%= form.text_field :username, placeholder: "Enter Username here..." %><br>
 <%= form.label :email %><br>
 <%= form.text_field :email, placeholder: "example@example.com" %><br>
 <%= form.label :password %><br>
 <%= form.text_field :password, placeholder: "*******" %><br>
 <%= form.submit "Submit"%>
<% end %>

